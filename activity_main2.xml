<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="6"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="2"
        android:textSize="50dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:onClick="method_7"
            android:id="@+id/btn_7"
            android:textColor="@color/black"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/btn_8"
            android:onClick="method_8"
            android:textColor="@color/black"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="9"
            android:id="@+id/btn_9"
            android:onClick="method_9"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="+"
            android:onClick="method_add"
            android:id="@+id/btn_add"
            android:textSize="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="6"
            android:onClick="method_6"
            android:id="@+id/btn_6"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="5"
            android:onClick="method_5"
            android:id="@+id/btn_5"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:id="@+id/btn_4"
            android:onClick="method_4"
            android:text="4"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="-"
            android:onClick="method_sub"
            android:id="@+id/btn_sub"
            android:textSize="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="3"
            android:onClick="method_3"
            android:id="@+id/btn_3"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="2"
            android:onClick="method_2"
            android:id="@+id/btn_2"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="1"
            android:onClick="method_1"
            android:id="@+id/btn_1"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="*"
            android:onClick="method_mul"
            android:id="@+id/btn_mul"
            android:textSize="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="0"
            android:onClick="method_0"
            android:id="@+id/btn_0"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="c"
            android:onClick="method_c"
            android:id="@+id/btn_c"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="="
            android:onClick="method_eql"
            android:id="@+id/btn_eql"
            android:textSize="50dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:id="@+id/btn_div"
            android:onClick="method_div"
            android:text="/"
            android:textSize="50dp"
            />

    </LinearLayout>




</LinearLayout>
